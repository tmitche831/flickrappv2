<h1>Flickrapp</h1>

<div id="container">
	<% @photos.each do |pic| %>
		<div id="photo_container">
		<%= link_to FlickRaw.url_b(pic) do %>
			<%= image_tag FlickRaw.url(pic), :class => "photo" %>
		<% end %>
		</div> 
	<% end %>
</div>


	

<div id="page_controls">
<%= "Page: #{@photos.page} / #{@photos.pages}" %>
<%= link_to("« previous", root_path(:page => @photos.page - 1)) + " - " if @photos.page > 1 %>
<%= link_to "next »", root_path(:page => @photos.page + 1) if @photos.page < @photos.pages %>
</div>